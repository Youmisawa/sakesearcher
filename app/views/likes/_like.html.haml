- if tweet.liked_by?(current_user)
  = link_to '飲んでみたい？', tweet_add_path(tweet), class:'Content__post__more__list', method: :delete, remote: true, id: :"like-button-#{tweet.id}"
- else
  = link_to '飲んでみたい！', tweet_add_path(tweet), class:'Content__post__more__list', method: :post, remote: true, id: :"like-button-#{tweet.id}"
